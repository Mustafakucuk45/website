        noBtn.addEventListener('click', function() {
            // KÃ¼Ã§Ã¼ltme animasyonu
            let scale = 1;
            const shrinkInterval = setInterval(() => {
                scale -= 0.05;
                noBtn.style.transform = `scale(${scale})`;
                
                if (scale <= 0) {
                    clearInterval(shrinkInterval);
                    noBtn.style.display = 'none';
                    
                    // Evet butonunu bÃ¼yÃ¼tme
                    let yesScale = 1;
